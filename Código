void Menu_Inicial ()  
{
	system ("cls");
	Hora();
    printf ("\n\n Bienvenido a la Red de c%clculos el%cctricos de Espa%ca. Seleccione la opci%cn que desea consultar:\n ",160,130,164,162) ;
    printf ("\n  1) Tipos de generacion.\n");
    printf ("\n  2) Fecha.\n");
    printf ("\n  3) Operacion a realizar.\n");
    printf ("\n  4) Salir.\n");
    printf ("\n\n Elija una opci%cn: ",162);  
}


void Hora()
{
	time_t t;
	struct tm *tm;
	char fecha_dia[100];
	t = time(NULL);
	tm = localtime(&t);
	strftime(fecha_dia, 100, "%d/%m/%Y", tm);
	printf("\n Fecha actual: %s", fecha_dia);
}


void Red_Info()
{
	int c;
	
	FILE *Red_Electr;
	Red_Electr = fopen("Red_Electr.txt", "r"); 

	if (Red_Electr == NULL)
	  printf("\n Archivo no encontrado.");

   	 while((c = getc(Red_Electr)) != EOF)
	{
	 	if (c == '\n')
	 	   printf("\n");
	 	else if (c == '\0')
	 	   printf("\0");
	 	else
	 	   putchar(c);
	}
}

